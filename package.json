      "types": "./vanilla/index.d.ts",
      "default": "./vanilla/index.js",
      "browser": "./vanilla/index.js",
      "import": "./vanilla/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "type": "module",
  "packageManager": "pnpm@9.6.0"
