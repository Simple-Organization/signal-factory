{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src", "tests"]
}
